#include "timer.h"

int timer_flag[NUM_OF_TIMER]={0};
int timer_counter[NUM_OF_TIMER]={0};



void setTimer(int index, int duration){
	timer_counter[index]=duration/TICK;
	timer_flag[index]=0;
}



void timer_run(int index){
	if(timer_counter[index]>0){
		timer_counter[index]--;
		if(timer_counter[index]<=0) timer_flag[index]=1;
	}
}


