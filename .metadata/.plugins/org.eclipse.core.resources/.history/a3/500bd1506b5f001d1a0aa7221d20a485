#include "timer.h"

int timer1_flag=0;
int timer1_counter=1000;

void setTimer1(int duration){
	timer1_counter=duration/TICK;
	timer1_flag=0;
}

void timer1_run(){
	if(timer1_counter>0){
		timer1_counter--;
		if(timer1_counter<=0) timer1_flag=1;
	}
}
