#include "timer.h"

int timer1_flag=0;
int timer1_counter=0;

void setTimer1( int duration){
	timer1_counter=duration/TICK;
	timer1_flag=0;
}



void timer_run(int index){
	if(timer_counter[index]>0){
		timer_counter[index]--;
		if(timer_counter[index]<=0) timer_flag[index]=1;
	}
}


